option_settings:
  aws:elasticbeanstalk:application:environment:
    ANDROID_APP_ROOT_URL: "https://android.proeliumx.com"
    IOS_APP_ROOT_URL: "https://ios.proeliumx.com"

  aws:elasticbeanstalk:container:python:
    WSGIPath: "proeliumx.wsgi:application"

  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: "static"


container_commands:
  01_install:
    command: source /var/app/venv/staging-LQM1lest/bin/activate && pip3 install -r requirements.txt
  02_makemigrations:
    command: source /var/app/venv/staging-LQM1lest/bin/activate && python3 manage.py makemigrations --noinput
    leader_only: true
  03_migrate:
    command: source /var/app/venv/staging-LQM1lest/bin/activate && python3 manage.py migrate
    leader_only: true
  04_collectstatic:
    command: source /var/app/venv/staging-LQM1lest/bin/activate && python3 manage.py collectstatic --noinput
    leader_only: true