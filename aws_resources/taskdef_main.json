{
  "executionRoleArn": "arn:aws:iam::476691507110:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "plx-nginx",
      "image": "<NGINX_IMAGE>",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "pseudoTerminal": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": [],
        "options": {
          "awslogs-group": "/ecs/plx-dev-main",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "dependsOn": [
        {
          "containerName": "plx-daphne",
          "condition": "HEALTHY"
        }
      ]
    },
    {
      "name": "plx-daphne",
      "image": "<DAPHNE_IMAGE>",
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::plx-dev/test-aws.env",
          "type": "s3"
        }
      ],
      "pseudoTerminal": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": [],
        "options": {
          "awslogs-group": "/ecs/plx-dev-main",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/admin || exit 1"
        ]
      }
    },
    {
      "name": "plx-celery",
      "image": "<CELERY_IMAGE>",
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::plx-dev/test-aws.env",
          "type": "s3"
        }
      ],
      "pseudoTerminal": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": [],
        "options": {
          "awslogs-group": "/ecs/plx-dev-main",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "dependsOn": [
        {
          "containerName": "plx-daphne",
          "condition": "HEALTHY"
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2048",
  "family": "plx-dev-main"
}
